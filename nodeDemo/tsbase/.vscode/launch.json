	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug server",
			"type": "node",
			"request": "launch",
			"args": [
				"${workspaceRoot}/src/index.ts"
			],
			"env": {
				"NODE_ENV": "dev"
			},
			"runtimeArgs": [
				"--nolazy",
				"-r",
				"ts-node/register"
			],
			"sourceMaps": true,
			"cwd": "${workspaceRoot}",
			"protocol": "inspector",
		}
	]
}
